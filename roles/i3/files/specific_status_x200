# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        output_format = i3bar
        colors = true
        interval = 5
}

#order += "ipv6"
order += "net_rate"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
#order += "cpu_temperature 0"
order += "sysdata"
#order += "load"
order += "volume master"
order += "arch_updates"
order += "tztime local"

sysdata {
        format =  "[\?color=cpu {cpu_temp}°C]\|[\?color=cpu {cpu_usage}%]\|[\?color=mem M:{mem_used}GB]"
}

arch_updates {
        include_aur = True
        format = "{pacman}/{aur}"
        cache_timeout = 1800
        hide_if_zero = False
}

wireless _first_ {
        #format_up = "W:%quality at %essid / %bitrate / %frequency / %ip"
        format_up = "W:%quality|%essid"
        format_down = ""
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = ""
}

battery all {
        align= left
        last_full_capacity=true
        #hide_seconds=true
        format = "%status %percentage %remaining %consumption"
        format_down = "No battery"
        low_threshold = 20
        threshold_type = percentage
}

battery_level {
        
        
}

net_rate {
        
        #format="{interface}: D:{down} U:{up}"
        format="D:{down} U:{up}"
        format_down=""
}

cpu_temperature 0 {
        format = "T: %degrees °C"
        format_above_threshold =  "Warning T above threshold: %degrees °C"
        max_threshold = 75
        #path = /sys/devices/platform/coretemp.0/temp1_input
}
volume master {
        format = "♪: %volume"
        format_muted = "♪: muted"
        device = "pulse:0,0" #write your own device address here
}

tztime local {
        #format = "%Y-%m-%d %H:%M:%S"
        format="%m.%d %H:%M" 
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}
